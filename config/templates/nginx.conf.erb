upstream <%= application %>_<%= rails_env %> {
  server unix:<%= shared_path %>/unicorn.sock fail_timeout=0;
}

server {
  listen 80;

  server_name riffx.myjungly.fr;

  root <%= current_path %>/public;

  access_log /var/log/nginx/<%= application %>.<%= rails_env %>.access.log;
  error_log /var/log/nginx/<%= application %>.<%= rails_env %>.error.log;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @unicorn;
  location @unicorn {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= application %>_<%= rails_env %>;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 20M;
  keepalive_timeout 10;
}