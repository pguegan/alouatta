%html
  %head
    %meta{charset: "utf-8"}
    %title= @title
    %meta{"http-equiv" => "Content-Type", content: "text/html; charset=utf-8"}
    = stylesheet_link_tag "mini/application"
    = javascript_include_tag "mini/application"
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = render '/layouts/ga'
  %body
    #jplayer
    #player{class: @station.name.downcase, data: { station: @station.name }}
      %h1 Ã‰coutez la radio live&nbsp;!
      .status.status-time
        En ce moment
        %span#current-time= l Time.now
      .status.status-title
        %span#current-title= @song.title
      .status.status-artist
        par
        %span#current-artist= @song.artist
      - if params[:cover].present?
        .status.status-cover
          = image_tag @song.cover, id: "current-cover"
        %a.control.mute.on{href: "javascript:;"}
